{% extends "layout/document.twig" %}
{% block content %}
 
<div class="row">
    <div class="col-sm-12">
        <a href="/color/new" class="btn btn-link btn-secondary">Create</a>
    <div>
<div>
    
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Hex</th>
            <th style="text-align:center">Actions</th>
        </tr>  
    </thead>
    <tbody>
        {% if rows is empty %}
            <tr>
                <td colspan="3">Nenhum resultado foi encontrado</td>
            </tr>   
        {% else %}
            {% for row in rows %} 
                <tr>
                    <td>{{ row.name }}</td>
                    <td>{{ row.hex }}</td>
                    <td style="text-align:center">
                        <a href="/color/{{ row.id }}" class="btn-link">Show</a>
                        <a href="/color/{{ row.id }}/edit" class="btn-link">Edit</a>
                        <a href="javascript:void(0)" class="btn-link">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
    </tbody>
    <tfoot>
        {{ offset + 1 }} of {{ limit }} from {{ total }}    
    </tfoot>
</table>
{% endblock %}